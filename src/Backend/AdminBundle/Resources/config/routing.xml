<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!--   Default Controller   -->
    <route id="backend_admin_userlist" path="/">
        <default key="_controller">BackendAdminBundle:Default:index</default>
    </route>

    <route id="backend_admin_editpage_user" path="/edit">
        <default key="_controller">BackendAdminBundle:Default:edit</default>
    </route>

    <!--   Project Controller   -->
    <route id="backend_admin_editpage_project" path="/projects">
        <default key="_controller">BackendAdminBundle:Project:index</default>
    </route>
</routes>
